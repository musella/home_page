body {
       left : 5%%;
       padding: 0px;
       margin: 0px;
       font-family: arial, helvetica;
       font-weight: 600; 
       font-size: 15px;
       border-color : %(dark)s;
       color : %(pale_dark)s;
       background-image:url('background.png');
       /* background : #DEF5AD; */
	
}

#header {
          text-align: center;
          float: left; 
          /*width: 50%%;
          padding-left: 12%%; 
             */
          width: 76%%;
          padding-left: 12%%;        
          padding-top: 0.5ex;
          color : %(bright_alt)s;
}

#footer {
          text-align: left;
          width: 76%%;
          padding-left: 12%%;
          padding-bottom: 0%%;
          clear: both;
}

#content {
           text-align: left; 
           float: left; 
           width: 50%%;
           padding-left: 12%%; 
}

#side {
        text-align: left; 
        padding-right: 12%%; 
        float: right; 
        width: 25%%;
        padding-top: 1.5ex;
}

.box legend { 
          color : %(dark)s;
          background : none;
          -moz-border-radius: 2ex;
          -webkit-border-radius: 2ex;
          -khtml-border-radius: 2ex;
          border-radius: 2ex;
          padding: 0.5ex;
          border : 2px solid %(dark)s;
} 

a { 
    color: %(bright)s;
    text-decoration:  none;
}

a:hover { 
          color: %(light)s;
          background: %(bright)s;

}

hr.line {
          width: 50%%; 
          height: 1px;
}

#content li { 
     color : %(bright_alt)s; 
     padding-bottom: 1ex;
}

#content li ul li { 
           color : %(pale_dark)s;
           padding-bottom: 0.5ex;
}

li em { 
     text-decoration : underline;
     color: %(greysh)s;
 }

.box {
       border-color : %(dark)s;
       border : 2px dashed %(dark)s;
       margin-bottom : 1.5ex;
       -moz-border-radius: 2ex;
       -webkit-border-radius: 2ex;
       -khtml-border-radius: 2ex;
       border-radius: 2ex;
}

.tbox {
       border-color : %(dark)s;
       border : 2px dashed %(dark)s;
       margin : 0.5ex;
       padding : 0;
       -moz-border-radius: 2ex;
       -webkit-border-radius: 2ex;
       -khtml-border-radius: 2ex;
       border-radius: 2ex;
}

.round {
         border-color : %(dark)s;
         border : 2px dashed %(dark)s;
         -moz-border-radius: 0.5ex;
         -webkit-border-radius: 2ex;
         -khtml-border-radius: 2ex;
         border-radius: 2ex;
}


#header a { 
	color: inherit; 
}

#header a:hover { 
	text-decoration : underline;
	background : inherit;
}

.feed_description {
     display : none;
     color : %(bright_alt)s;
     opacity: 1;
     -moz-opacity:1;
     position: absolute; 
	top : inherit;
	left : 70%%;
	width : 30%%;
     background : %(white)s;
     padding : 0.5ex;	 
         border-color : %(dark)s;
         border : 2px solid %(dark)s;
         -moz-border-radius: 0.5ex;
         -webkit-border-radius: 2ex;
         -khtml-border-radius: 2ex;
         border-radius: 2ex;
}

#navbar a { 
              color: orange;
}

.feed_description img {
	width : 100%%;
}

.feed:hover {
        color: %(light)s;
	background: %(bright)s;
}

.feed:hover  .feed_description {
	display : block;
}

.feed_description:hover{
	display : block;
}

.rnd_feed {
    height : 10%%;
}

code {   
       color: #bdc820;
}

